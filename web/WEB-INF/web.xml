<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>PersonController</servlet-name>
        <servlet-class>co.edu.udistrital.dasp.controllers.PersonController</servlet-class>
    </servlet>
    <servlet>
         <servlet-name>CardController</servlet-name>
         <servlet-class>co.edu.udistrital.dasp.controllers.CardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PersonController</servlet-name>
        <url-pattern>/PersonController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CardController</servlet-name>
        <url-pattern>/CardController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
    